@{
    ViewBag.Title = "Verificación de Código";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Contenedor principal -->
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
            <div class="text-center mb-4">
                <h4 class="fw-bold">Verifica tu código</h4>
                <p class="text-muted">Ingresa el código que hemos enviado a tu correo electrónico</p>
            </div>

            <form method="post" action="@Url.Action("VerificarCodigo", "Login")">
                <input type="hidden" name="Usuario" value="@ViewBag.Usuario" />

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="codigo" name="Codigo" placeholder="123456" maxlength="6" required />
                    <label for="codigo">Código de verificación</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Verificar</button>

                @if (!string.IsNullOrEmpty(ViewBag.MensajeError))
                {
                    <div class="alert alert-danger mt-3 text-center" role="alert">
                        @ViewBag.MensajeError
                    </div>
                }
            </form>

            <div class="text-center mt-3">
                <small class="text-muted">¿No recibiste el código? <a href="#">Reenviar</a></small>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
