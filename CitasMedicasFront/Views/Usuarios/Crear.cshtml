        }

        if (contraseña.length < 12 || contraseña.length > 30) {
            $(this).addClass('is-invalid');
            $('#contraseña-error').text('La contraseña debe tener entre 12 y 30 caracteres.').show();
        } else if (!tieneMayuscula) {
            $(this).addClass('is-invalid');
            $('#contraseña-error').text('La contraseña debe contener al menos una letra mayúscula.').show();
        } else if (!tieneEspecial) {
            $(this).addClass('is-invalid');
            $('#contraseña-error').text('La contraseña debe contener al menos un carácter especial.').show();
        } else {
            $(this).removeClass('is-invalid');
            $('#contraseña-error').hide();
        }

        if (!isValid) {
            e.preventDefault();
        }
    });

    $('form').on('submit', function (e) {
        const contraseña = $('#contraseña').val().trim();
        const tieneMayuscula = /[A-Z]/.test(contraseña);
        const tieneEspecial = /[^a-zA-Z0-9]/.test(contraseña);
        let isValid = true;

        if (contraseña.length < 12 || contraseña.length > 30) {
            $('#contraseña').addClass('is-invalid');
            $('#contraseña-error').text('La contraseña debe tener entre 12 y 30 caracteres.').show();
            isValid = false;
        } else if (!tieneMayuscula) {
            $('#contraseña').addClass('is-invalid');
            $('#contraseña-error').text('La contraseña debe contener al menos una letra mayúscula.').show();
            isValid = false;
        } else if (!tieneEspecial) {
            $('#contraseña').addClass('is-invalid');
            $('#contraseña-error').text('La contraseña debe contener al menos un carácter especial.').show();
            isValid = false;
        }

        if (!isValid) {
            e.preventDefault(); // Bloquear envío
        }
    });
</script>

<script>
    $('#usuario').on('blur keyup', function () {
        const usuario = $(this).val().trim();

        if (usuario.length === 0) {
            $(this).removeClass('is-invalid');
            $('#usuario-error').hide();
            return; // Salimos de la función
        }

        if (usuario.length < 10 || usuario.length > 25) {
            $(this).addClass('is-invalid');
            $('#usuario-error').text('El usuario debe tener entre 10 y 25 caracteres.').show();
        } else {
            $(this).removeClass('is-invalid');
            $('#usuario-error').hide();
        }
    });
</script>


<script>
    $(document).ready(function () {
        $('#tablaPersonal').DataTable({
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
            }
        });

        $('#tablaRol').DataTable({
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
            }
        });
    });
</script>
<script>
    $(document).on('click', '.seleccionar-personal', function () {
        var personalId = $(this).data('id');
        var nombrePersonal = $(this).data('nombre');

        $('#personal').val(nombrePersonal);
        $('#personalId').val(personalId);

        // Cerrar modal usando jQuery y Bootstrap tradicional
        $('#personalModal').modal('hide');
    });

</script>

<script>

    $(document).on('click', '.seleccionar-rol', function () {
        var rolId = $(this).data('id');
        var rol = $(this).data('nombre');

        $('#rol').val(rol);
        $('#rolId').val(rolId);

        // Cerrar modal usando jQuery y Bootstrap tradicional
        $('#RolModal').modal('hide');
    });
</script>
<script>
    $(document).ready(function () {
        $('#contraseña').on('input', function () {
            const password = $(this).val();
            const result = zxcvbn(password);
            const score = result.score; // Score va de 0 (muy débil) a 4 (muy fuerte)

            let texto = "";
            let color = "";

            switch (score) {
                case 0:
                    texto = "Muy débil";
                    color = "red";
                    break;
                case 1:
                    texto = "Débil";
                    color = "orange";
                    break;
                case 2:
                    texto = "Regular";
                    color = "gold";
                    break;
                case 3:
                    texto = "Fuerte";
                    color = "blue";
                    break;
                case 4:
                    texto = "Muy fuerte";
                    color = "green";
                    break;
            }

            $('#password-strength-meter').text(texto).css('color', color);
        });
    });

</script>

