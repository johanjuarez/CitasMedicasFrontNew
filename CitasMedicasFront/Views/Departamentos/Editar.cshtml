@{
    ViewBag.Title = "Editar Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Paciente</h2>

@using (Html.BeginForm("Actualizar", "Departamentos", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" id="departamentoId" name="DepartamentoId" value="@Model.DepartamentoId" />

    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="Nombre" id="nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripcion</label>
        <input type="text" name="Descripcion" id="descripcion" class="form-control" value="@Model.Descripcion" required />
    </div>
    <input type="hidden" name="FechaRegistro" value="@Model.FechaRegistro" />


    <button type="submit" class="btn btn-outline-success">Actualizar</button>
}

<hr />
<a href="@Url.Action("Index", "Departamentos")" class="btn btn-outline-secondary">Volver a la lista</a>
